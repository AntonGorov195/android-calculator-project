<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calc_design"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1."
        android:background="@android:drawable/alert_light_frame"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="in"
            android:textColor="#000000"
            android:textSize="32sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1."
        android:background="@android:drawable/alert_light_frame"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/output"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="out"
            android:textColor="#000000"
            android:textSize="32sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/openParen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_paren"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="("
            android:textSize="32sp" />

        <Button
            android:id="@+id/closeParen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_paren"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text=")"
            android:textSize="32sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_del"
            android:fontFamily="sans-serif-black"
            android:onClick="clearInput"
            android:text="C"
            android:textSize="32sp" />

        <Button
            android:id="@+id/backspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_del"
            android:fontFamily="sans-serif-black"
            android:onClick="deleteInputChar"
            android:text="&lt;"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="7"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="8"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="9"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_op"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="+"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="4"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="6"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_op"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="-"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="1"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="2"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="3"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_op"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="*"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="."
            android:textSize="32sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="0"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonEq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_eq"
            android:fontFamily="sans-serif-black"
            android:onClick="assignOutput"
            android:text="="
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_design_op"
            android:fontFamily="sans-serif-black"
            android:onClick="buttonClicked"
            android:text="/"
            android:textSize="32sp" />
    </LinearLayout>

</LinearLayout>